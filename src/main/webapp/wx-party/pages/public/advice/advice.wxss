.section{
  width: 650rpx;
  margin: 20px auto;
  font-size: 26rpx;
  color: #E83C3C;
}
.class-radio-view{
  margin-top: 20rpx;
}
.btn{
  margin-top: 20rpx;
  background-color: #E83C3C;
  color: #fff;
}
.class-textarea{
  width: 100%;
  border: 2rpx solid #E83C3C;
  border-radius: 10rpx;
  box-sizing: border-box;
  padding: 10rpx;
}
.class-view{
  display: inline-flex;
}
.radio-group{
  display: inline-flex;
  margin-left: 20rpx;
}
.radio-group label{
  margin-right:  30rpx;
  vertical-align: middle;
}