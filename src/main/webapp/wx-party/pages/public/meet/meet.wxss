page,.container > image{
  width: 100%;
  height: 100%;
}
.container{
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.container > .content-box{
  position: absolute;
  z-index: 5;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.container .meet-wrapper{
  width: 700rpx;
  margin: 20rpx auto;
}
.container .meet-wrapper > text{
  position: relative;
  display: block;
  width: 200rpx;
  color: #fff;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 34rpx;
  padding-left: 35rpx;
  background-color: #E83C3C;
}
.container .meet-wrapper > text::after{
  content: "";
  position: absolute;
  right: -60rpx;
  top: -1rpx;
  width: 0;
  height: 0;
  border: 32rpx solid #E83C3C;
  border-right: 32rpx solid transparent;
  border-top: 32rpx solid transparent;
}
.container .meet-list{
  height: 930rpx;
  background-color: #fff;
  box-shadow: 0 0 10rpx #ddd;
}
::-webkit-scrollbar{
  display: none;
  width: 0;
  height: 0;
  background-color: transparent;
}
.container .meet-list .list-item{
  padding: 30rpx 35rpx;
  background-color: #fff;
  border-bottom: 2rpx solid #ddd;
}
.container .meet-list .item-title{
  color: #333;
  font-size: 30rpx;
  line-height: 50rpx;
  margin-bottom: 20rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.container .meet-list .item-title > text.over{background-color: #999;}
.container .meet-list .item-title > text.on{background-color: #5BB85D;}
.container .meet-list .item-tip {
  font-size: 26rpx;
  color: #999;
}
.container .meet-list .item-tip text.time{float: left;}
.container .meet-list .item-tip text.num{
  float: right;
  text-align: right;
}
.container .no-meet{
  width: 245rpx;
  margin: 120rpx auto 0;
  color: #fff;
  text-align: center;
  font-size: 30rpx;
}
.container .no-meet image{
  width: 100%;
  margin-bottom: 45rpx;
}
.container .bottom-wrapper{
  position: absolute;
  left: 50%;
  bottom: 0;
  display: flex;
  width: 100%;
  height: 150rpx;
  transform: translateX(-50%);
  background-color: #fff;
}
.container .bottom-wrapper > .meet-item{
  flex: 1;
  color: #666;
  text-align: center;
  font-size: 26rpx;
  border-right: 2rpx solid #ddd;
}
.container .bottom-wrapper > .meet-item .iconfont{
  display: block;
  color: #666;
  font-size: 60rpx;
  margin: 25rpx auto 8rpx;
}
.container .bottom-wrapper > .meet-item.on,
.container .bottom-wrapper > .meet-item.on .iconfont{
  color: #E83C3C;
}