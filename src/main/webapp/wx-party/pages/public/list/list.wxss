.box {
  display: flex;
  position: relative;
  width: 100%;
  height: 100%;
  background-color: rgba(255, 255, 255, .7);
  border-bottom: 4rpx solid #666;
}
.box > image{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  z-index: -1;
  width: 100%;
  height: 100%;
  margin: auto;
}
.box > view {
  width: 50%;
  padding: 10rpx;
}
.box > view .title{
  width: 100%;
  line-height: 70rpx;
  text-align: center;
  padding-bottom: 8rpx;
  border-bottom: 4rpx solid #999;
}
.box > view:nth-child(2){
  border-right: 4rpx solid #999;
}
.content {
  width: 100%;
  padding: 20rpx 5rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  box-sizing: border-box;
}
.text-box {
  width: 70%;
  font-size: 24rpx;
  line-height: 50rpx;
}
.text-box text {
  display: block;
  width: 100%;
  font-size: 32rpx;
  text-align: center;
  border-bottom: 2rpx solid #aaa;
}
.content> view {
  display: flex;
  width: 100%;
}
.num {
  width: 30%;
  color: #E83C3C;
  text-align: center;
  height: 100rpx;
  font-size: 56rpx;
  line-height: 100rpx;
  border: 2rpx solid #aaa;
  margin-right: 10rpx;
}