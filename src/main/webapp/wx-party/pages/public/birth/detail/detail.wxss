/* pages/index/news/detail/detail.wxss */
.box {
  display: flex;
  flex-wrap: wrap;
  padding: 0 20rpx;
}
.imgs{
  text-align: center;
  margin: 0 auto;
}
.box text {
  width: 100%;
}
.textdate{
  font-size: 10px;
  
}

.title{
  position: relative;
  font-size: 32rpx;
  color: #333;
  padding: 20rpx 0 20rpx 50rpx;
  border-bottom: 1rpx solid #ddd;
}
.title > .iconfont{
  position: absolute;
  right: 24rpx;
  bottom: 0;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #666;
  text-align: center;
  padding-right: 25rpx;
}
.title > .iconfont::before{
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 0;
  font-size: 24rpx;
}
.title::after{
  content: "";
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 30rpx;
  width: 8rpx;
  height: 50rpx;
  background-color: #E83C3C;
}
.img{
  text-align: center;
  width:90%;
  height: auto;
  margin: 0 auto;
  padding: 1rem 0 0 0;
}
.textdate{
  position: absolute;
  right: 10rpx;
  bottom: 0;
  width: 180rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #666;
  text-align: center;
  
}
image{
  width: 100%;
  height: 240px;
  display:inline-block;
  overflow: hidden;
  outline:1px solid grey;
}