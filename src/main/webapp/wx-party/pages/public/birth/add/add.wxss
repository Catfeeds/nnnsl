page,.container{
  min-height: 100%;
  background-color: #F0EFF4;
}
.container .model-title{
  position: relative;
  font-size: 32rpx;
  color: #333;
  background-color: #fff;
  padding: 20rpx 0 20rpx 50rpx;
  border-bottom: 2rpx solid #ddd;
}
.container .model-title:last-child{
  border-top: 2rpx solid #ddd;
}
.container .model-title::after{
  content: "";
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 30rpx;
  width: 8rpx;
  height: 50rpx;
  background-color: #E83C3C;
}
.container .img-list{
  display: flex;
  background-color: #fff;
  margin: 0 auto;
  flex-direction: row;
  flex-wrap: wrap;
  padding: 0 10rpx;
  border-bottom:  2rpx solid #ddd;
}
.container .img-list image{
  width: 200rpx;
  height: 200rpx;
  margin: 15rpx; 
  border: 2rpx dashed #ddd;
}
.container .img-list image:last-child{
  border: none;
}
.section{
  padding: 30rpx;
  font-size: 30rpx;
  color: #E83C3C;
  background-color: #fff;
  border-bottom:  2rpx solid #ddd;
}
.content{
  width: 100%;
  border: 2rpx solid #E83C3C;
  border-radius: 10rpx;
  box-sizing: border-box;
  padding: 10rpx;
}
.btn{
  margin-top: 20rpx;
  background-color: #E83C3C;
  color: #fff;
}