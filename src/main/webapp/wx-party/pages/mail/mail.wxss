.container .search-wrapper{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 10;
  bottom: auto;
  margin: auto;
  padding: 16rpx 20rpx;
  background-color: #F5F5F5;
  border-bottom: 2rpx solid #ddd;
  box-shadow: 0 0 15rpx #ddd;
}
.container .search-wrapper input{
  position: relative;
  padding: 12rpx 110rpx 12rpx 15rpx;
  background-color: #fff;
  border-radius: 12rpx;
  font-size: 30rpx;
  color: #E83C3C;
  box-shadow: 0 0 15rpx #ddd;
}
.container .search-wrapper .p-input{color: #E83C3C;}
.container .search-wrapper .icon-search{
  position: absolute;
  top: 0;
  right: 0;
  z-index: 5;
  color: #fff;
  width: 110rpx;
  height: 100%;
  background-color: #E83C3C;
}
.container .search-wrapper .icon-search::before{
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}
.container .mail-wrapper{
  padding-top: 110rpx;
  border-bottom: 2rpx solid #ddd;
  box-shadow: 0 0 15rpx #ddd;
}
.container .mail-wrapper .mail-title{
  color: #666;
  height: 60rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  line-height: 60rpx;
  border-top: 2rpx solid #ddd;
  border-bottom: 2rpx solid #ddd;
}
.container .mail-wrapper .mail-title text.iconfont{
  color: #999;
  font-size: 22rpx;
  padding: 0 15rpx;
}
.container .mail-wrapper .mail-list{
  padding-left: 30rpx;
  border-bottom: 2rpx solid #ddd;
}
.container .mail-list .mail-item{
  position: relative;
  padding: 25rpx 0;
  color: #333;
}
.container .mail-list .mail-structure{padding-left: 60rpx;}
.container .mail-list .mail-structure > text.icon-structure::before,
.container .mail-list .mail-structure > text.icon-more::before{
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
}

.container .mail-list .mail-structure > text.icon-structure::before{
  left: 0;
  width: 45rpx;
  height: 45rpx;
  color: #fff;
  line-height: 45rpx;
  text-align: center;
  border-radius: 8rpx;
  font-size: 24rpx;
  background-color: #E83C3C;
}
.container .mail-list .mail-structure > text.icon-more::before{
  right: 30rpx;
  color: #999;
  font-size: 28rpx;
}
.container .mail-list .mail-item:not(:last-child){border-bottom: 2rpx dashed #ddd;}
.container .mail-list .mail-member > .img-box{
  float: left;
  width: 75rpx;
  height: 75rpx;
  margin-top: 15rpx;
  border-radius: 15rpx; 
  border: 2rpx solid #E83C3C;
  vertical-align: middle;
}
.container .mail-list .mail-member > .img-box > image{width: 100%;height: 100%;}
.container .mail-list .mail-member .member-info{
  position: relative;
  height: 100rpx;
  padding-left: 100rpx;
  overflow: visible;
}
.container .mail-list .mail-member .member-name{
  font-size: 28rpx;
  line-height: 42rpx;
  color: #333;
}
.container .mail-list .mail-member .member-tel{
  font-size: 22rpx;
  color: #666;
}
.container .mail-list .mail-member .member-info .iconfont{
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 60rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  border: 4rpx solid #ddd;
  border-radius: 50%;
  color: #666;
}