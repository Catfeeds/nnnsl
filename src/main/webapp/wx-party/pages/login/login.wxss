.box {
  display: flex;
  position: relative;
  width: 100%;
  height: 100%;
  background-color: rgba(255, 255, 255, .7);
  border-bottom: 4rpx solid #666;
}
.box > image{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  z-index: -1;
  width: 100%;
  height: 100%;
  margin: auto;
}
page{
  width: 100%;
  height: 100%;
  overflow: hidden;
  background-color: #E83C3C;
}
.container{
  width: 75%;
  padding-top: 120rpx;
  margin: auto;
}
.login-title{
  color: #fff;
  text-align: center;
  font-weight: bold;
  font-size: 50rpx;
}
.form-wrapper{margin-top: 60rpx;}
.form-wrapper input{
  position: relative;
  border: 1px solid;
  padding-left: 82rpx;
  margin: 0 auto 40rpx;
  height: 70rpx;
  color: #333;
  line-height: 70rpx;
  font-size: 30rpx;
  border-radius: 10rpx;
  background-color: #fff;
  border-color: rgb(229,229,232) rgb(220,220,221) rgb(213,213,213) rgb(220,220,221);
  box-shadow: 0 0 15rpx #ddd;
}
.form-wrapper input.verify-code{padding-right: 160rpx; }
.form-wrapper input::before{
  position: absolute;
  left: 5rpx;
  color: #998;
  padding:0 15rpx;
  border-right: 1rpx solid rgb(229,229,232);
}
.form-wrapper .code-input{position: relative;}
.form-wrapper .code-input .getcode{
  position:absolute;
  right: 0;
  top: 0;
  color: #666;
  padding: 0;
  width: 150rpx;
  text-align: center;
  font-size: 24rpx;
  height: 72rpx;
  line-height: 72rpx;
  box-sizing:border-box;
  border-left: 1rpx solid rgb(229,229,232);
}
.container > text{
  color: #fff;
  font-size: 21rpx;
}
.login-btn,
.wx-login{
  margin-top: 110rpx;
  background-color: #1aad19;
  color: #fff;
  font-size: 40rpx;
  box-shadow: 0 0 15rpx #F3C500;
  /* display: none; */
}
.wx-login{
   margin-top: 250rpx;
}