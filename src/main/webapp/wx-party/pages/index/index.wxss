.container .swiper-wrapper{position: relative;}
.container .swiper-wrapper .swiper-nav{
  position: absolute;  
  left: 0;  
  right: 0;  
  bottom: 20rpx;  
  display: flex;
  justify-content: flex-end;
  padding-right: 5rpx;
}
.container .swiper-wrapper .swiper-nav text{
  width: 20rpx;
  height: 20rpx;
  margin: 0 10rpx;
  border-radius: 30%;
  background-color: rgba(0, 0, 0, .5);
}
.container .swiper-wrapper .swiper-nav text.on{background-color: #fff;}
.container .index-swiper{height: 360rpx;}
.container .index-swiper swiper-item{
  position: relative;
  height: 100%;
  overflow: hidden;
}
.container .index-swiper swiper-item image{width: 100%;height: 100%;}
.container .index-swiper swiper-item view{
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 64rpx;
  line-height: 64rpx;
  color: #fff;
  font-size: 28rpx;
  text-indent: 20rpx;
}
.container .index-model{
  background-color: #fff;
  border-top: 2rpx solid #ddd;
  border-bottom: 2rpx solid #ddd;
}
.container .index-model .title{
  position: relative;
  font-size: 32rpx;
  color: #333;
  padding: 20rpx 0 20rpx 50rpx;
  border-bottom: 1rpx solid #ddd;
}
.container .index-model .title > .iconfont{
  position: absolute;
  right: 24rpx;
  bottom: 0;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #666;
  text-align: center;
  padding-right: 25rpx;
}
.container .index-model .title > .iconfont::before{
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 0;
  font-size: 24rpx;
}
.container .index-model .title::after{
  content: "";
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 30rpx;
  width: 8rpx;
  height: 50rpx;
  background-color: #E83C3C;
}

.container .index-nav{
  display: flex;
  width: 90%;
  flex-wrap: wrap;
  margin: 0 auto;
}
.container .index-nav > view{
  width: 24.8%;
  text-align: center;
  font-size: 26rpx;
  color: #333;
  padding: 30rpx 0 15rpx;
}
.container .index-nav > view text{
  display: block;
  width: 90rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 42rpx;
  color: #fff;
  border-radius: 50%;
  text-align: center;
  margin: 0 auto 15rpx;
}
.container .index-nav-box > view text::before{text-align: center;}