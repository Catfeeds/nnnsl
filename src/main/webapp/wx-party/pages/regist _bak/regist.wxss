page{
  width: 100%;
  height: 100%;
  overflow: hidden;
  background-color: #E83C3C;
}
.container{
  width: 85%;
  margin: auto; 
  padding-top: 20rpx;
}
.login-title{
  color: #fff;
  text-align: center;
  font-weight: bold;
  font-size: 50rpx;
  width: 100%;
}
.form-wrapper{
  margin-top: 40rpx;
  width:100%;
}
.form-wrapper input{
  position: relative;
  border: 1px solid;
  padding-left: 82rpx;
  margin: 0 auto 40rpx;
  height: 70rpx;
  color: #333;
  line-height: 70rpx;
  font-size: 30rpx;
  border-radius: 10rpx;
  background-color: #fff;
  border-color: rgb(229,229,232) rgb(220,220,221) rgb(213,213,213) rgb(220,220,221);
  box-shadow: 0 0 15rpx #ddd;
}
.form-wrapper input.verify-code{padding-right: 160rpx; }
.form-wrapper input::before{
  position: absolute;
  left: 5rpx;
  color: #998;
  padding:0 15rpx;
  border-right: 1rpx solid rgb(229,229,232);
}
.form-wrapper .form-input> text{
  display: block;
  color: #fff;
  font-size: 20rpx;
  padding-bottom: 5rpx;
}
.form-wrapper .form-input{width: 100%;position: relative;}
.form-wrapper .form-input .getcode{
  position:absolute;
  right: 0;
  top: 0;
  color: #666;
  padding: 0;
  width: 150rpx;
  text-align: center;
  font-size: 24rpx;
  height: 72rpx;
  line-height: 72rpx;
  box-sizing:border-box;
  border-left: 1rpx solid rgb(229,229,232);
}
.form-wrapper .form-input:first-child{
  display: flex;
  justify-content: space-between;
} 
.container > text{
  color: #fff;
  font-size: 20rpx;
}
.regist-btn{
  width: 100%;
  margin-top: 40rpx;
  background-color: #F3C500;
  color: #fff;
  font-size: 40rpx;
  box-shadow: 0 0 15rpx #F3C500;
}
.view-btn{
  width: 95%;
  height: 70rpx;
  line-height: 70rpx;
  border:1px solid #DCDCDD;
  border-radius: 10rpx;
  font-size: 30rpx;
  text-align: center;
  background-color: #fff;
  color:#878787;
  margin: 100rpx auto 0 auto;
  position: relative;
  bottom: 0;
}
.view-img{
  background-color: #fff;
  width: 190rpx;
  border:1px solid #DCDCDD;
  border-radius: 10rpx;
  height: 190rpx;
  float: right;
}
.view-img image{width: 100%;height: 100%;}
.view-right{width: 190rpx;}
.view-right text{
  display: block;
  color: #fff;
  text-align: center;
  font-size: 20rpx;
  margin-bottom: 30rpx;
}